<%- include('partials/header') %>
<div class="jumbotron">
    <h1>Welcome</h1>
    <p>Shashwat Kadam</p>
</div>
<div class="container-extended">
    <% if(locals.error) { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <% if(locals.success) { %>
        <div class="alert alert-success"><%= success %></div>
    <% } %>
    <div class="row">
        <div class='col-lg-12' id="student">
            <div class="forms">
                <h1>
                    Student? Login here!
                </h1>
                <hr/>
                <form method="post">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <!--<label for="RollNo">Roll Number: </label>-->
                                <input type="text" name="username" id="username" class="form-control" placeholder="Roll Number" value="<%= locals.username || '' %>" required/>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <!--<label for="spassword">Password: </label>-->
                                <input type="password" name="password" id="password" class="form-control" placeholder="Password" ng-model="studentPassword" required/>
                            </div>
                        </div>
                    </div>
                    <!--<div class="row">
                        <div class="col-lg-6">
                            <span style="color:red" ng-show="studentForm.RollNo.$dirty && studentForm.RollNo.$invalid">
                                <span ng-show = "studentForm.RollNo.$error.required">Roll Number is required.</span>
                            </span>
                        </div>
                        <div class="col-lg-6">
                            <span style="color:red" ng-show="studentForm.spassword.$dirty && studentForm.spassword.$invalid">
                                <span ng-show = "studentForm.spassword.$error.required">Password is required.</span>
                            </span>
                        </div>
                    </div>-->
                    <button type="submit" class="btn btn-lg btn-success">Sign-In</button>
                    <p style="text-align: center;">Not a member? <a href='/register' class="btn btn-link">Sign-Up</a></p>
                    <a class="btn btn-warning btn-lg" href="/loginFaculty">Not a student? Head here!</a>
                </form>
            </div>
        </div>
    </div>
    <br/><br/>

</div>
</body>

</html>